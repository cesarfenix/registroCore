@model IEnumerable<registroCore.Models.Persona>

@{
    ViewData["Title"] = "Lista de personas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if(TempData["mensaje"] != null)
            {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
            }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de personas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Personas">Registrar nuevo</a>
        </div>
    </div>
    <div class="row">
        @if(Model.Count() > 0)
            {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.id)</td>
                        <td>@Html.DisplayNameFor(m => m.nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.correo)</td>
                        <td>@Html.DisplayNameFor(m => m.fechaNacimiento)</td>
                        <td>Aciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.nombre</td>
                        <td>@item.correo</td>
                        <td>@item.fechaNacimiento</td>
                        <td>
                            <a asp-controller="Personas" asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Personas" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                        </td>
                     </tr>
                        }

</tbody>
            </table>
            }
            else
            {
                <p>No existen registros</p>
            }
    </div>
</div>

